<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goosewizards.codingchallenge.MovieDescriptionActivity">

    <LinearLayout
        android:id="@+id/topChunk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        >

        <ImageView
            android:id="@+id/descripPoster"
            android:src="@drawable/abc_btn_radio_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/descripTitle"
            android:text="TITLE"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@id/topChunk"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/bottomChunk"
        android:layout_below="@id/separator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/movieDescrip"
            android:text="Really Cool Description Here!"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>


</RelativeLayout>
